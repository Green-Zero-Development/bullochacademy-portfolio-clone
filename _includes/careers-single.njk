---
layout: base.njk
---
<div class="relative flex flex-wrap max-w-8xl mx-auto">
    <style>
        .desktop-hero-img {
            background-image: url('https://inside.bullochacademy.com/wp-content/uploads/2021/10/careers-listing-hero-img.jpg');
            height: 330px;
            border-radius: 6px;
        }

        .mobile-hero-img {
            background-image: url('https://inside.bullochacademy.com/wp-content/uploads/2021/10/careers-listing-hero-img.jpg');
            width: 100%;
            height: 200px;
        }
    </style>
    <div class="lg:hidden w-full bg-cover bg-center mobile-hero-img">

    </div>
    <div class="w-full md:w-2/3 lg:w-7/12 xl:w-2/3 pl-4 lg:pl-12 pr-4 lg:pr-0">
        <div id="hero-title-box" class="mt-8 mb-6">
            <h6 class="text-sm text-green-200 uppercase tracking-widest">{{ careerSing.title }}</h6>
            <h1 class="text-4xl md:text-h1-init leading-none">{{ careerSing.jobTitle }}</h1>
        </div>
        <div class="lg:hidden my-8 mobile-buttons-box">
            <a href="/apply-for-career/">
                <button class="green-button">Apply</button>
            </a>
        </div>
    </div>
    <div class="w-full md:w-1/3 lg:w-5/12 xl:w-1/3 lg:pr-12">
        <div id="hero-button-box" class="hidden lg:flex items-end justify-end my-8">
            <a href="/apply-for-career/">
                <button class="green-button">Apply</button>
            </a>
        </div>
    </div>
</div>

<div class="hidden lg:block max-w-8xl mx-auto px-4 lg:px-12">
    <div class="w-full  bg-cover bg-center desktop-hero-img">

    </div>
</div>

<div class="max-w-8xl mx-auto py-12 px-4 lg:px-24 wysiwig-block">
    {{ careerSing.details | safe }}
    <a href="/apply-for-career/">
        <button class="green-button">Apply</button>
    </a>
</div>

{% include "global/pre-footer-cta.njk" %}

<script>
    let heroTitleBox = document.getElementById('hero-title-box');
    let heroButtonBox = document.getElementById('hero-button-box');
    let heroTitleBoxHeight = heroTitleBox.offsetHeight;
    heroButtonBox.style.cssText = `height:` + heroTitleBoxHeight + `px`;
</script>